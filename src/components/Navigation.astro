<nav>
  <a href="/" class="logo">Manmeet Kaur</a>

  <button class="mobile-menu-button" aria-label="Menu" aria-expanded="false">
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </button>

  <ul class="nav-links">
    <li><a href="/">Home</a></li>
    <li><a href="/services">Services</a></li>
    <li><a href="/about">About</a></li>
    <li><a href="/contact">Contact</a></li>
  </ul>
</nav>

<script>
  const mobileMenuButton = document.querySelector(".mobile-menu-button");
  const navLinks = document.querySelector(".nav-links");

  mobileMenuButton?.addEventListener("click", () => {
    const isExpanded = navLinks?.classList.toggle("show");
    mobileMenuButton.setAttribute(
      "aria-expanded",
      isExpanded ? "true" : "false"
    );
    mobileMenuButton?.classList.toggle("open");
  });
</script>

<style>
  nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
  }

  .logo {
    font-family: "Lora", serif;
    font-size: 1.5rem;
    color: var(--white);
    font-weight: 600;
    transition: color 0.4s ease;
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 2.5rem;
    list-style: none;
  }

  .nav-links a {
    text-decoration: none;
    color: var(--white);
    font-weight: 600;
    font-size: 1rem;
    transition: color 0.4s ease;
    padding-bottom: 5px;
    border-bottom: 2px solid transparent;
  }

  .nav-links a:hover {
    color: var(--white);
    border-bottom-color: var(--white);
  }

  .mobile-menu-button {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 30px;
    height: 24px;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 10;
  }

  .bar {
    width: 100%;
    height: 3px;
    background: var(--white);
    transition: all 0.3s ease-in-out;
    border-radius: 2px;
  }

  /* Scrolled Styles */
  :global(.scrolled) .logo,
  :global(.scrolled) .nav-links a {
    color: var(--primary-dark);
  }

  :global(.scrolled) .nav-links a:hover {
    color: var(--accent-color);
    border-bottom-color: var(--accent-color);
  }

  :global(.scrolled) .bar {
    background: var(--primary-dark);
  }

  /* Mobile Menu Animation */
  .mobile-menu-button.open .bar:first-child {
    transform: rotate(45deg) translate(7px, 7px);
  }

  .mobile-menu-button.open .bar:nth-child(2) {
    opacity: 0;
  }

  .mobile-menu-button.open .bar:last-child {
    transform: rotate(-45deg) translate(6px, -7px);
  }

  @media (max-width: 768px) {
    .mobile-menu-button {
      display: flex;
    }

    .nav-links {
      display: none;
      position: absolute;
      top: calc(100% + 1rem);
      left: 0;
      right: 0;
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
      padding: 2rem;
      background: var(--white);
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }

    .nav-links.show {
      display: flex;
    }

    .nav-links a {
      color: var(--primary-dark);
    }

    .nav-links a:hover {
      color: var(--accent-color);
      border-bottom-color: transparent;
    }
  }
</style>
